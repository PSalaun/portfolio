---
import '../styles/global.scss';
const { title = 'Pierre Salaün, développeur web', description = "Je suis un développeur web spécialisé en React et Ruby on Rails. J'ai plusieurs années d'expérience en tant que chef de projet métier et consultant en organisation, avant d'avoir décidé d'élargir ma palette de compétences vers le développement web" } = Astro.props;
---

<meta charset="UTF-8" />
<meta name="description" property="og:description" content={description} />
<meta name="viewport" content="width=device-width" />
<title>{title}</title>

<link rel="icon" type="image/x-icon" href="/favicon.ico" />
