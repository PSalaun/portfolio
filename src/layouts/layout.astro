---
import MainHead, { SEO } from '@components/MainHead.astro';
import Footer from '@components/Footer/index.tsx';
import Nav, { Route } from '@components/Nav/index.tsx';
import Contact from '@components/Contact/index.tsx';

import 'src/styles/global.scss';
const { currentPath, seo } = Astro.props as { currentPath: Route, seo: SEO };
---
<html lang="fr">
	<head>
		<MainHead {...seo}/>
	</head>
	<body class="bg-light">
		<Nav currentPath={currentPath} />
			<slot />
		<Contact />
		<Footer />
	</body>
</html>
